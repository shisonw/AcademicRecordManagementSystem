<%- include('layout_start') %>

<div class="container">
<h1 class="display-1">Signin</h1>
<form action="/signup" method="post">
  <div class="form-outline mb-4">
    <label class="form-label" for="form2Example1">Username</label>
    <input type="text" id="username" class="form-control" name="username" required/>
  </div>

  <div class="form-outline mb-4">
    <label class="form-label" for="form2Example2">Password</label>
    <input type="password" id="password" class="form-control" name="password" pattern="(?=.\d)(?=.[a-z])(?=.*[A-Z]).{8,}" required/>
  </div>

  <div class="form-outline mb-4">
    <label class="form-label" for="form2Example2">Re-enter Password</label>
    <input type="password" id="confirmPassword" class="form-control" pattern="(?=.\d)(?=.[a-z])(?=.*[A-Z]).{8,}" required/>
  </div>

  <div class="form-outline mb-4">
    <label class="form-label" for="form2Example2">HKID</label>
    <input type="text" id="hkid" class="form-control" name="hkid" required/>
  </div>


  <label class="col-sm-5 col-form-label">Account Type</label>
  <div class="col-sm-10">
      <select class="form-select" name="type" aria-label="Default select example"
          onchange="teamSelected(this.value) " required>
          <option value="" selected disabled>Select account type</option>
          <option value="teacher">Teacher</option>
          <option value="student">Student</option>
      </select>
  </div>


  <div class="row mb-4">
      <a href="/login">Already have a account?</a>
  </div>

  <button type="submit" class="btn btn-primary btn-block mb-4">Sign up</button>
</form>
</div>

<script>
var password = document.getElementById("password")
  , confirm_password = document.getElementById("confirmPassword");

function validatePassword(){
  if(password.value != confirm_password.value) {
    confirm_password.setCustomValidity("Passwords Don't Match");
  } else {
    confirm_password.setCustomValidity('');
  }
}

password.onchange = validatePassword;
confirm_password.onkeyup = validatePassword;
</script>

<%- include('layout_end') %>