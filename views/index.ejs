<!DOCTYPE html>
<html lang="en">
<head>
  <title>Student Online Scoring System</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="https://unpkg.com/bootstrap-table@1.22.1/dist/bootstrap-table.min.css">
</head>

<body onload="getData('home')">
<div class="container-fluid">
    <div class="row flex-nowrap">
        <div class="col-sm-2 col-auto px-0 collapse collapse-horizontal overflow-hidden" id="sidebar">
            <div class="list-group border-0 text-center text-sm-start min-vh-100" id="sidebar-menu">
                <% for (var c of classes) { %>
                    <a href="#" class="list-group-item border-0 d-inline-block text-truncate" data-bs-parent="#sidebar"><span class="d-none d-sm-inline"><%= c.cname %></span></a>
                <% } %>
            </div>
        </div>
        <div class="col-sm-auto col ps-md-2 pt-2 min-vh-100">
            <a href="#" data-bs-target="#sidebar" data-bs-toggle="collapse" class="border rounded-3 p-1 text-decoration-none"><i class="fa fa-navicon fa-lg py-2 p-1"></i>Menu</a>
        </div>
        <div id="content" class="container-fluid col-sm col border-start ps-md-2 pt-2"></div>
    </div>
</div>
</body>

</html>

<script>
    function getData(pageName) {
        var req = new XMLHttpRequest(); 
        
        req.open("get","/" + pagename);

        req.onload = function(){ 
            var content = document.getElementById("content");
            content.innerHTML = this.responseText;
        };

        req.send();
    }
</script>